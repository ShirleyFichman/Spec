<%- include('../includes/head.ejs') %>
</head>
<body>
   <%- include('../includes/employer-navigation.ejs') %>

    <main>
        <form class="job-form" action="/employer/edit-job/<%= employerId %>/<%= job.id %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= job.title %>">
            </div>
            <div class="form-control">
                <label for="requirements">Requirements</label>
                <textarea name="requirements" id="requirements" rows="5" value="<%= job.requirements%>"></textarea>
            </div>
            <div class="form-control">
                <label for="summary">Summary</label>
                <textarea name="summary" id="summary" rows="5" value="<%= job.summary %>"></textarea>
            </div>
            <button class="btn" type="submit">Update Job</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>

