<%- include('../includes/head.ejs') %>
</head>

<body>
   <%- include('../includes/employer-navigation.ejs') %>

    <main>
        <h1>Jobs page for Employer <%- employerId %></h1>
        <form action="/employer/get-post-job/<%= employerId %>" method="POST">
            <button type="submit" class="btn">Add Job</button>
        </form>
        <ul class="jobs">
            <% for (var i = 0; i < jobs.length; i++) { %>
            <li class="job-listed">
                <div class="job-title">
                    <span class="title" style="text-align:left"><%= jobs[i].title %></span>
                </div>
            </li>
            <% } %>
        </ul>
    </main>
<%- include('../includes/end.ejs') %>
