<body>
   <%- include('../includes/employer-navigation.ejs') %>

    <main>
        <form class="job-form" action="/employer/post-job/<%= employer.id %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title">
            </div>
            <div class="form-control">
                <label for="requirements">Requirements</label>
                <textarea name="requirements" id="requirements" rows="5"></textarea>
            </div>
            <div class="form-control">
                <label for="summary">Summary</label>
                <textarea name="summary" id="summary" rows="5"></textarea>
            </div>
            <button class="btn" type="submit">Create Job</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>

