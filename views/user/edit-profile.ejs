<%- include('../includes/head.ejs') %>
</head>
<body>
   <%- include('../includes/user-navigation.ejs') %>

    <main>
        <form class="profile-form" action="/user/post-edit-profile/<%= profile.id %>" method="POST">
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%= profile.imageUrl %>">
            </div>
            <div class="form-control">
                <label for="fullName">Full Name</label>
                <input type="text" name="fullName" id="fullName" value="<%= profile.fullName %>">
            </div>
            <div class="form-control">
                <label for="location">Location</label>
                <input type="text" name="location" id="location" value="<%= profile.location %>">
            </div>
            <div class="form-control">
                <label for="intro">Intro</label>
                <textarea name="intro" id="intro" rows="5"><%= profile.intro %></textarea>
            </div>
            <button class="btn" type="submit">Update Profile</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>

